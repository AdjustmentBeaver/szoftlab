<?xml version="1.0"?>
<!-- A palya formatumat leiro DTD fajl -->
<!DOCTYPE level SYSTEM "level.dtd">
<level>
    <nodes>
        <node type="node" name="sin1">
            <position x="0" y="1"/>
            <neighbours>
                <neighbour name="sin2"/>
            </neighbours>
        </node>
        <node type="node" name="sin2">
            <position x="1" y="1"/>
            <neighbours>
                <neighbour name="sin1"/>
                <neighbour name="valto"/>
            </neighbours>
        </node>
        <node type="switch" name="valto">
            <position x="2" y="1"/>
            <neighbours>
                <neighbour name="sin2"/>
                <neighbour name="sin3"/>
                <neighbour name="sin4"/>
            </neighbours>
        </node>
        <node type="node" name="sin3">
            <position x="2" y="2"/>
            <neighbours>
                <neighbour name="valto"/>
            </neighbours>
        </node>
        <node type="node" name="sin4">
            <position x="2" y="0"/>
            <neighbours>
                <neighbour name="valto"/>
            </neighbours>
        </node>
    </nodes>
    <trains>
        <train start_node="sin1" start_time="0">
            <trainPart type="engine" speed="1"/>
            <trainPart type="cart" color="blue"/>
        </train>
    </trains>
</level>
