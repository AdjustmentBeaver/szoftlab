<?xml version="1.0"?>
<!-- A palya formatumat leiro DTD fajl -->
<!DOCTYPE level SYSTEM "level.dtd">
<level>
    <nodes>
        <node type="node" name="node1">
            <position x="20" y="20"/>
            <neighbours>
                <neighbour name="switch1"/>
            </neighbours>
        </node>
        <node type="switch" name="switch1">
            <position x="100" y="20"/>
            <neighbours>
                <neighbour name="node1"/>
                <neighbour name="node2"/>
                <neighbour name="node3"/>
            </neighbours>
        </node>
        <node type="node" name="node2">
            <position x="200" y="20"/>
            <neighbours>
                <neighbour name="switch1"/>
                <neighbour name="node4"/>
            </neighbours>
        </node>
        <node type="node" name="node3">
            <position x="100" y="100"/>
            <neighbours>
                <neighbour name="switch1"/>
                <neighbour name="nd5"/>
            </neighbours>
        </node>
        <node type="node" name="node4">
            <position x="300" y="20"/>
            <neighbours>
                <neighbour name="node2"/>
            </neighbours>
        </node>
        <node type="node" name="nd5">
            <position x="100" y="200"/>
            <neighbours>
                <neighbour name="node3"/>
                <neighbour name="nd6"/>
            </neighbours>
        </node>
        <node type="station" name="nd6" color="green">
            <position x="100" y="200"/>
            <neighbours>
                <neighbour name="nd5"/>
                <neighbour name="nd7"/>
            </neighbours>
        </node>
        <node type="loaderStation" name="nd7" color="green">
            <position x="200" y="200"/>
            <neighbours>
                <neighbour name="nd6"/>
                <neighbour name="nd8"/>
            </neighbours>
        </node>
        <node type="node" name="nd8">
            <position x="300" y="300"/>
            <neighbours>
                <neighbour name="nd7"/>
            </neighbours>
        </node>
    </nodes>
    <trains>
        <train start_node="node1" start_time="0">
            <trainPart type="engine" speed="1"/>
            <trainPart type="cart" color="green"/>
            <trainPart type="coalWagon"/>
        </train>
    </trains>
</level>