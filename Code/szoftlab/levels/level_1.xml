<?xml version="1.0"?>
<!-- A palya formatumat leiro DTD fajl -->
<!DOCTYPE level SYSTEM "level.dtd">
<level>
    <nodes>
        <node type="node" name="n0">
            <position x="0" y="300"/>
            <neighbours>
                <neighbour name="sw0"/>
            </neighbours>
        </node>
        <node type="switch" name="sw0">
            <position x="200" y="300"/>
            <neighbours>
                <neighbour name="sp0"/>
                <neighbour name="n0"/>
                <neighbour name="n1"/>
            </neighbours>
        </node>
        <node type="node" name="n1">
            <position x="800" y="300"/>
            <neighbours>
                <neighbour name="sw0"/>
            </neighbours>
        </node>
        <node type="specialPlace" name="sp0">
            <position x="250" y="400"/>
            <neighbours>
                <neighbour name="sw0"/>
            </neighbours>
        </node>
        <node type="specialPlace" name="sp1">
            <position x="500" y="350"/>
            <neighbours>
                <neighbour name="sw1"/>
            </neighbours>
        </node>
        <node type="switch" name="sw1">
            <position x="400" y="250"/>
            <neighbours>
                <neighbour name="sp1"/>
                <neighbour name="st0"/>
                <neighbour name="n3"/>
            </neighbours>
        </node>
        <node type="station" name="st0" color="green">
            <position x="280" y="150"/>
            <neighbours>
                <neighbour name="sw1"/>
                <neighbour name="n4"/>
            </neighbours>
        </node>
        <node type="node" name="n3">
            <position x="600" y="0"/>
            <neighbours>
                <neighbour name="sw1"/>
            </neighbours>
        </node>
        <node type="node" name="n4">
            <position x="0" y="100"/>
            <neighbours>
                <neighbour name="st0"/>
            </neighbours>
        </node>
        <node type="specialPlace" name="sp2">
            <position x="250" y="500"/>
            <neighbours>
                <neighbour name="n5"/>
            </neighbours>
        </node>
        <node type="node" name="n5">
            <position x="500" y="500"/>
            <neighbours>
                <neighbour name="sp2"/>
            </neighbours>
        </node>
        <node type="station" name="st1" color="red">
            <position x="600" y="450"/>
            <neighbours>
                <neighbour name="n5"/>
            </neighbours>
        </node>
        <node type="specialPlace" name="sp3">
            <position x="650" y="250"/>
            <neighbours>
                <neighbour name="st1"/>
            </neighbours>
        </node>
    </nodes>
    <trains>
        <train start_node="n0" start_time="300">
            <trainPart type="engine" speed="1"/>
            <trainPart type="coalWagon"/>
            <trainPart type="cart" color="green"/>
        </train>
    </trains>
</level>